@model ICollection<SliderListItemVM>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider</h1>
        <a asp-action="Create" asp-controller="Slider" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        Create Slider
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Text</th>
                            <th colspan="2" >Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td><img width="200" src="~/@item.ImagePath" /></td>
                                <td>@item.Text</td>
                                <td><a class="btn btn-outline-info text-center" asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-outline-danger text-center" asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

